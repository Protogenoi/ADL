        <div class="col-8">
            {{ form_row(NewClientForm.lastName, {
                'label': 'Last Name'
            }) }}
        </div>

        <div class="col-8">
            {{ form_row(NewClientForm.dob) }}
        </div>

        <div class="col-8">
            {{ form_row(NewClientForm.email) }}
        </div>

    </div>

    <div class="col-sm">

